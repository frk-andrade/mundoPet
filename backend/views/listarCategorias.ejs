<%- include('partials/head') %>
<%- include('partials/header') %>

<main class="container-form">
    <section aria-label="FormulÃ¡rio">
      <fieldset class="conta-contato">
        <h2 class="font-1-xl">Adicione uma nova categoria</h2>
          <form class="form" action="" method="POST">
            <div class="form-info font-2-m-b font-1-m-b">
              <label for="nome">Nome:</label>
              <input type="text" name="nome" id="nome" placeholder="Nome" required>
            </div>
            <button class="botao-contato font-1-m-b">Incluir</button>
        </form>
      </fieldset>
    </section>

    <section class="table-responsive bg-form">
      <table class="table align-middle">
        <thead class="form-result">
          <tr class="font-1-xl">
            <th>Id</th>
            <th>Nome</th>
          </tr>
        </thead>
        <tbody class="body-marcas">
          <% for (categoria of categorias) { %> 
            <tr class="descritivos">
              <td class="font-1-m-b"><%= categoria.id %> </td>
              <td class="font-1-m-b"><%= categoria.nome %> </td>
            </tr>
            <% } %> 
        </tbody>
      </table>
    </section>
  </main>

<%- include('partials/footer') %>