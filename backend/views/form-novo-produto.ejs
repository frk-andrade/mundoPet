<%- include('partials/head') %>
<%- include('partials/header') %>

<main class="container-form">
  <script>
    function goBack() {
      window.history.back()
    }
  </script>
  <button onclick="goBack()" class="botao-contato font-1-m-b"> &#129044; Voltar</button>
  <section class="formularioproduto" aria-label="Formulário">
    <fieldset class="conta-contato">
      <h2 class="font-1-xl">Novo Produto</h2>
      <form class="form" method="POST" action="">
        <div class="form-info form-info-first font-2-m-b font-1-m-b mb-5">
          <label class="form-label" for="nome">Nome do Produto: </label>
          <input class="form-control form-nome-produto" type="text" name="nome" id="nome" placeholder="Nome" required>
        </div>

        <div class="form-info font-2-m-b font-1-m-b mb-3">
          <label class="form-label" for="marca_id">Marcas:</label>
          <select class="form-select" id="marcas" name="marca" required>
            <option class="selected" selected disabled value="">Selecione</option>
<% for (marca of marcas) { %> 
            <option class="selected" value="<%= marca.id %>"><%= marca.nome %> </option>
<% } %> 
          </select>
        </div>

        <div class="form-info font-2-m-b font-1-m-b mb-3">
          <label class="form-label" for="categoria">Categoria:</label>
          <select class="form-select form-categoria" id="categoria" name="categoria" required>
            <option selected disabled value="">Selecione</option>
<% for (categoria of categorias) { %> 
              <option value="<%= categoria.id %>"><%= categoria.nome %> </option>
<% } %> 
            </select>
        </div>

        <div class="form-info font-2-m-b font-1-m-b mb-3">
          <label  class="form-label" for="preco">Preço:</label>
          <input  class="form-control" type="decimal" name="preco" id="preco" placeholder="Preço" required>
        </div>

        <div class="form-info font-2-m-b font-1-m-b mb-3">
          <label class="form-label" for="promocao">Promoção:</label>
          <input class="form-control" type="decimal" name="promocao" id="promocao" placeholder="Promoção" required>
        </div>

        <div class="form-info font-2-m-b font-1-m-b mb-3">
          <label class="form-label" for="descricao">Descrição do produto:</label>
          <input class="form-control form-descricao-produto" type="textarea" name="descricao" id="descricao" placeholder="Descrição do produto" required>
        </div>

        <button class="botao-contato font-1-m-b">Adicionar Produto</button>
      </form>
    </fieldset>
  </section>

  <section class="table-responsive bg-form">
    <table class="table align-middle">
      <thead class="form-result">
        <tr class="align-bottom font-2-xs">
          <th>ID</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Preço</th>
          <th>Promoção</th>
          <th>Marca</th>
          <th>Categoria</th>
          <th> Ações</th>
        </tr>
      </thead>
      <tbody class="body-marcas">
  <% for (produto of produtos) { %> 
        <tr class="descritivos">
          <td class="align-top font-2-xs"><%= produto.id %></td>
          <td class="align-top font-2-xs"><%= produto.nome %></td>
          <td class="align-top font-2-xs"><%= produto.descricao %></td>
          <td class="align-top font-2-xs"><%= produto.preco %></td>
          <td class="align-top font-2-xs"><%= produto.promocao %></td>
          <td class="align-top font-2-xs"><%= produto.marca.nome %></td>
          <td class="align-top font-2-xs"><%= produto.categoria.nome %></td>
          <td class="align-top">
          <button><img class="icones-descricao" src="/images/excluir.png" width="17px" alt="excluir"></button>
          <button><img src="/images/editar-texto.png" width="17px" alt="editar"></button>
        </tr>
  <% } %> 
      </tbody>
    </table>
  </section>
</main>

<%- include('partials/footer') %>