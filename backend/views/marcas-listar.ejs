<%- include('partials/head') %>
<%- include('partials/header') %>

<main class="container-form">
  <script>
    function goBack() {
      window.history.back()
    }
  </script>
  <button onclick="goBack()" class="botao-contato font-1-m-b"> ← Voltar</button>
    <section aria-label="Formulário">
      <fieldset class="conta-contato">
        <h2 class="font-1-xl">Adicione uma nova marca</h2>
          <form class="form" action="" method="POST">
            <div class="form-info font-2-m-b font-1-m-b">
              <label for="nome">Nome:</label>
              <input type="text" name="nome" id="nome" placeholder="Nome" required >
            </div>
            <button class="botao-contato font-1-m-b">Incluir</button>
        </form>
      </fieldset>
        </div>
    </section>

    <section class="table-responsive bg-form">
      <table class="table align-middle">
        <thead class="form-result">
          <tr class="font-1-xl">
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody class="body-marcas">
          <% for (marca of marcas) { %> 
            <tr class="descritivos">
              <td class="align-top font-2-xs"><%= marca.id %> </td>
              <td class="align-top font-2-xs"><%= marca.nome %> </td>
              <td class="align-top">
                <a href="/admin/marcas/remover/<%= marca.id %>"><img class="icones-descricao" src="/images/excluir.png" width="17px" alt="excluir"></a>
                <a href="/admin/marcas/editar/<%= marca.id %>"><img src="/images/editar-texto.png" width="17px" alt="editar"></a>
              </td>
            </tr>
            <% } %> 
        </tbody>
      </table>
    </section>
<%- include('partials/footer') %>