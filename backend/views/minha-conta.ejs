<%- include('partials/head') %>
<%- include('partials/header') %>

<main class="container-form">
  <section class="formularioproduto" aria-label="Formulário">
    <fieldset class="conta-contato">
      <h2 class="font-1-xl">Editar Minha Conta</h2>
      <form class="form form-cadastro-cliente" method="POST" action="">
        <div class="form-info form-info-first font-2-m-b font-1-m-b mb-5">
          <label class="form-label" for="nome">Nome: </label>
          <input class="form-control form-nome-produto" type="text" pattern="([aA-zZ]+)" value="<%= usuario.nome %>" name="nome" id="nome"  required>
          <label class="form-label" for="nome">Sobrenome: </label>
          <input class="form-control form-nome-produto" type="text" pattern="([aA-zZ]+)" value="<%= usuario.sobrenome %>" name="sobrenome" id="sobrenome" required>
        </div>

        <div class="form-cadastro">
          <div class="form-info font-2-m-b font-1-m-b mb-3">
            <label class="form-label" for="email">Email:</label>
            <input class="form-control form-nome-produto" type="email" value="<%= usuario.email %>" name="email" id="email" required>
          </div>
          <div class="form-info font-2-m-b font-1-m-b mb-3">
            <label  class="form-label" for="cpf">CPF:</label>
            <input  class="form-control" type="text" value="<%= usuario.cpf %>" name="cpf" id="cpf" pattern="([0-9]{2}[\.]?[0-9]{3}[\.]?[0-9]{3}[\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\.]?[0-9]{3}[\.]?[0-9]{3}[-]?[0-9]{2})" required>
          </div>
          
          <div class="form-info font-2-m-b font-1-m-b mb-3">
            <label class="form-label" for="phone">Telefone:</label>
            <input class="form-control" type="tel" name="phone" value="<%= usuario.telefone %>" id="phone" required>
          </div>
        </div>

        } %> 
        <button class="botao-contato font-1-m-b">Editar</button>
      </form>
      <% if (!locals.enderecos) { %>
        <!-- Não temos endereços cadastrados -->
      <% } else { 
        for (const endereco of enderecos) { %>
          <a href="/minhaconta/endereco/<%= endereco.id %>"><%= endereco.alias %></a>        
          
      <% }
  </fieldset>
  </section>

</main>

<%- include('partials/footer') %>