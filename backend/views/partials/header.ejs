            <input type="password" class="form-control font-1-xs" id="inputPassword" placeholder="Insira a sua senha">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary font-1-xs font-2-m-b" data-bs-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary font-1-xs font-2-m-b">Entrar</button>
      </div>
    </div>
  </div>
